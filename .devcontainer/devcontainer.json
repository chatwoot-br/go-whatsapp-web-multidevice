// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Go WhatsApp Multi-Device with Admin API",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},

	// Configure port forwarding for the application
	"forwardPorts": [
		3000,    // Main GOWA REST API
		8088,    // Admin API
		9001,    // Supervisor web interface
		3001,    // Instance port range start
		3002,
		3003,
		3004,
		3005,
		3006,
		3007,
		3008,
		3009,
		3010     // Instance port range end
	],

	// Set port attributes
	"portsAttributes": {
		"3000": {
			"label": "GOWA REST API",
			"onAutoForward": "notify"
		},
		"8088": {
			"label": "Admin API",
			"onAutoForward": "notify"
		},
		"9001": {
			"label": "Supervisor Web UI",
			"onAutoForward": "silent"
		}
	},

	// Environment variables for development
	"containerEnv": {
		"ADMIN_TOKEN": "dev-token-123",
		"SUPERVISOR_URL": "http://127.0.0.1:9001/RPC2",
		"SUPERVISOR_USER": "admin",
		"SUPERVISOR_PASS": "admin123",
		"GOWA_BIN": "/usr/local/bin/whatsapp"
	},

	// Run setup script after container is created
	"postCreateCommand": "/usr/local/bin/setup.sh && /workspaces/go-whatsapp-web-multidevice/.devcontainer/quickstart.sh",

	// VS Code customizations
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ms-vscode.vscode-json",
				"redhat.vscode-yaml",
				"ms-vscode.makefile-tools"
			],
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go",
				"go.goroot": "/usr/local/go",
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},

	// Mount points for development
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/.env.dev,target=/workspaces/go-whatsapp-web-multidevice/src/.env,type=bind"
	],

	// Use vscode user (non-root)
	"remoteUser": "vscode"
}
